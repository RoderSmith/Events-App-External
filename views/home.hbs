  {{#events}}
       <div class="card border-light mb-3 shadow rounded">
          <div class="card-body">
              <div class="card-title"><h3>{{ title }}</h3></div>
              <div class="card-text">
                 <div class="row">
                    <div class="col-sm-2">Description:</div>
                    <div class="col-sm-10">{{description}}</div>
                 </div>
                 <div class="row my-4">
                    <div class="col-sm-2">Location: </div>
                    <div class="col-sm-10">{{location}}</div>
                 </div>
                 <div class="row my-4">
                
                       <div class="col-sm-1">
                           <form method="POST" action="/event/like">
                            <input type="hidden" value="{{id}}" name="id">
                            <button type="submit" class="btn btn-success fa fa-thumbs-o-up"></button>
                           </form>
                       </div>
                       <div class="col-sm-8">
                           <form method="POST" action="/event/unlike">
                             <input type="hidden" value="{{id}}" name="id">
                             <button type="submit" class="btn btn-danger fa fa-thumbs-o-down"></button> 
                           </form>
                       </div>
                       <div class="col-sm-2">Total Likes: {{ likes }}</div>
                 </div>
              </div>  
          </div>
       </div>
  {{/events}}